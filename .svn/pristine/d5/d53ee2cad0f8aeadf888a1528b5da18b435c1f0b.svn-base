    @Override
    public void actionPerformed(ActionEvent ae) {
        if(!controller.isPaused() && !controller.inMainMenu() && !controller.inOptionsMenu())
        {
            controller.tick();
            if (mmDrawn)
                mmDrawn = false;
        }
        else if (controller.inMainMenu())
        {
            if (!mmDrawn) {
                controller.drawMenu(Nibbles.Menus.MAIN);
                mmDrawn = true;
            }
        }
        else if (controller.inOptionsMenu())
        {
            if (!mmDrawn) {
                controller.drawMenu(Nibbles.Menus.OPTIONS);
                mmDrawn = true;
            }
        }
    }
    
    private void init() {
        setVisible(true);
        addKeyListener(this);
        setFocusable(true);
        setFocusTraversalKeysEnabled(false);
    }

    @Override
    public void keyTyped(KeyEvent ke) {}

    @Override
    public void keyPressed(KeyEvent ke) {
       if (controller.inMainMenu()) {
           mmDrawn = false;
           controller.setMenu(Nibbles.Menus.OPTIONS);
       }
       else if (controller.inOptionsMenu()) {
           mmDrawn = false;
           controller.setMenu(Nibbles.Menus.NONE);
       }
       else // in the actual game
       {
            switch(ke.getKeyCode()) {
                case KeyEvent.VK_RIGHT:
                    controller.setSnakeDirection(EnumDirection.RIGHT, currentPlayer);
                    break;
                case KeyEvent.VK_LEFT:
                   controller.setSnakeDirection(EnumDirection.LEFT, currentPlayer);
                    break;
                case KeyEvent.VK_DOWN:
                   controller.setSnakeDirection(EnumDirection.DOWN, currentPlayer);
                    break;
                case KeyEvent.VK_UP:
                   controller.setSnakeDirection(EnumDirection.UP, currentPlayer);
                    break;
                case KeyEvent.VK_SPACE:
                   controller.setPaused(!controller.isPaused());
                   controller.sparklePause();
                   break;
                case KeyEvent.VK_ESCAPE:
                   controller.quitGame();
                   break;
                case KeyEvent.VK_ENTER:
                    controller.incLevel();
                    break;
            }
        }
    }

    @Override
    public void keyReleased(KeyEvent ke) {}

